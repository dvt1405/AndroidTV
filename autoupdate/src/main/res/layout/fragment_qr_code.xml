<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DD000000">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/qr_code"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="centerInside"
            android:theme="@style/Theme.MaterialComponents"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.SmallComponent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/qr_code_center"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@color/black"
            android:padding="1dp"
            android:src="@drawable/component_3"
            android:theme="@style/Theme.MaterialComponents"
            app:contentPadding="15dp"
            app:layout_constraintBottom_toBottomOf="@id/qr_code"
            app:layout_constraintEnd_toEndOf="@id/qr_code"
            app:layout_constraintStart_toStartOf="@id/qr_code"
            app:layout_constraintTop_toTopOf="@id/qr_code"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>