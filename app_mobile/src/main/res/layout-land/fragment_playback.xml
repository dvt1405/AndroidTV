<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.playback.BasePlaybackFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/motion_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/fragment_playback_scene">
        <com.google.android.exoplayer2.ui.StyledPlayerView
            android:id="@+id/exo_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:controller_layout_id="@layout/exo_player_simple_controller"
            app:player_layout_id="@layout/exo_player_custom_ui"
            app:use_controller="true"
            android:animateLayoutChanges="true"
            />

        <View
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            />
        <LinearLayout
            android:id="@+id/minimal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/minimal_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Animax"
                android:textColor="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:textSize="24sp"
                android:singleLine="true"
                />
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/minimal_loading"
                android:layout_width="@dimen/base_icon_size"
                android:layout_height="@dimen/base_icon_size"
                android:indeterminate="true"
                app:indicatorColor="@color/white"
                android:layout_gravity="center"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/minimal_play_button"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                app:icon="@drawable/ic_play"
                app:iconSize="@dimen/base_icon_size"
                app:iconTint="@color/white"
                android:background="@color/transparent"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                android:padding="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/exit_button"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                app:iconSize="@dimen/base_icon_size"
                app:icon="@drawable/ic_clear"
                app:iconTint="@color/white"
                android:background="@color/transparent"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                android:padding="0dp"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>