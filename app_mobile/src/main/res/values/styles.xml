<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout" parent="">
        <item name="colorControlActivated">#CF9500</item>
        <item name="colorPrimary">#CF9500</item>
    </style>

    <style name="AlertDialogTheme" parent="android:Theme.Material.Dialog.Alert">


        <!-- Used for the buttons -->
        <item name="colorAccent">@android:color/white</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Used for the background -->
        <item name="android:background">@color/black</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
    </style>

    <style name="WrapContentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>

        <!-- Used for the buttons -->
        <item name="colorAccent">@android:color/white</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Used for the background -->
        <item name="android:background">#00000000</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/white</item>

        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/item_row_title</item>
    </style>

    <style name="RoundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="NavigationItemView" parent="">
        <item name="colorPrimary">@color/red_btn_bg_color</item>
        <item name="colorOnPrimary">@color/blue_btn_bg_color</item>
    </style>

    <style name="NavigationView" parent="Widget.MaterialComponents.NavigationRailView.Colored">
        <item name="labelVisibilityMode">labeled</item>
    </style>
    <style name="Theme.AppCompat" parent="Base.Theme.AppCompat"/>
    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@color/gray_btn_bg_pressed_color</item>
    </style>
</resources>