<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.playback.BasePlaybackFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/motion_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:layoutDescription="@xml/fragment_playback_scene">
        <com.google.android.exoplayer2.ui.StyledPlayerView
            android:id="@+id/exo_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:controller_layout_id="@layout/exo_player_simple_controller"
            app:player_layout_id="@layout/exo_player_custom_ui"
            app:use_controller="true"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>