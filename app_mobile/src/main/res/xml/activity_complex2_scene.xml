<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/guideline_complex"
            app:layout_constraintGuide_percent="0"
            android:orientation="horizontal"
            />
        <Constraint android:id="@+id/fragment_container_playback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline_complex"
            />
        <Constraint android:id="@+id/fragment_container_channels"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_complex"
            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/guideline_complex"
            app:layout_constraintGuide_percent="0.3"
            android:orientation="horizontal"
            />
        <Constraint android:id="@+id/fragment_container_playback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline_complex"
            />
        <Constraint android:id="@+id/fragment_container_channels"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_complex"
            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/fullscreen">
        <Constraint android:id="@+id/guideline_complex"
            app:layout_constraintGuide_percent="1"
            android:orientation="horizontal"
            />
        <Constraint android:id="@+id/fragment_container_playback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline_complex"
            />
        <Constraint android:id="@+id/fragment_container_channels"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_complex"
            />
    </ConstraintSet>

    <Transition
        android:id="@+id/transition_show_video"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start" />

    <Transition
        android:id="@+id/collapse_show_video"
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/fullscreen"
        app:duration="1000"
        app:motionInterpolator="linear"
        >
        <OnSwipe
            app:dragDirection="dragDown"
            app:touchAnchorId="@id/fragment_container_playback"
            app:touchAnchorSide="bottom"
            />
    </Transition>
</MotionScene>
