<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="392dp"
    android:layout_gravity="end|center_vertical"
    android:background="@drawable/background_corners_16dp"
    android:backgroundTint="#FF282828"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginEnd="24dp"
    android:paddingStart="24dp">

    <TextView
        android:layout_marginTop="0dp"
        style="@style/TextViewTitleVideoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title" />

    <TextView
        android:id="@+id/video_title"
        style="@style/TextViewDescriptionVideoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/video_duration_title"
        style="@style/TextViewTitleVideoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duration" />

    <TextView
        android:id="@+id/video_duration"
        style="@style/TextViewDescriptionVideoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/TextViewTitleVideoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video Resolution" />

    <TextView
        android:id="@+id/video_resolution"
        style="@style/TextViewDescriptionVideoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/TextViewTitleVideoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Frames per seconds" />

    <TextView
        android:id="@+id/video_frame_rate"
        style="@style/TextViewDescriptionVideoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/TextViewTitleVideoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video codec" />

    <TextView
        android:id="@+id/video_codec"
        style="@style/TextViewDescriptionVideoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/TextViewTitleVideoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Audio codec" />

    <TextView
        android:id="@+id/audio_codec"
        style="@style/TextViewDescriptionVideoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/TextViewTitleVideoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Color" />

    <TextView
        android:id="@+id/color_info"
        style="@style/TextViewDescriptionVideoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NoValue" />

</LinearLayout>