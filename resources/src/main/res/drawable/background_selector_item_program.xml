<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:enterFadeDuration="200" android:exitFadeDuration="100" tools:ignore="MissingDefaultResource">
    <item android:state_focused="true">
        <layer-list>
            <item android:bottom="-4dp" android:end="-4dp" android:right="-4dp" android:top="-4dp" tools:targetApi="m">
                <shape android:shape="rectangle">
                    <stroke android:width="4dp" android:color="@color/orange" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#20FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:end="-100dp" android:left="-100dp" android:right="-100dp" android:start="-100dp" android:top="-1dp" tools:targetApi="m">
                <shape android:shape="rectangle">
                    <size android:height="2dp" />
                    <stroke android:width="1dp" android:color="#1AFFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>