<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                        
                 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         android:tag="layout/fragment_voice_selector_dialog_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"

            android:paddingTop="@dimen/dialog_base_padding"
            android:paddingBottom="@dimen/dialog_base_padding"
            >
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/voice_control_title"
                android:textAppearance="@style/TextAppearance.Body"
                android:textAlignment="center"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/voice_selector_desc"
                android:textAppearance="@style/TextAppearance.Medium"
                android:textAlignment="center"
                android:textColor="@color/sub_text_color"
                />
        </LinearLayout>
        <com.kt.apps.voiceselector.AppItemView
            android:id="@+id/voice_app_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon_logo="@drawable/app_icon"
            app:title="Trợ lý giọng nói Kiki"
            app:description="Điều khiển thiết bị, tìm kiếm nội dung bằng tiếng Việt từ bất kỳ đâu"
            android:background="@drawable/item_focused_background"
            />
        <Button
            android:id="@+id/install_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/install"
            android:padding="12dp"
            android:textColor="@color/install_btn"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textSize="14sp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dialog_base_padding"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="4dp"
            />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#54FFFFFF"
            />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/others_desc"
            android:textAppearance="@style/TextAppearance.Label"
            android:textStyle="bold"
            android:paddingVertical="@dimen/dialog_padding_8dp"
            android:paddingHorizontal="@dimen/dialog_base_padding"
            />
        <com.kt.apps.voiceselector.AppItemView
            android:id="@+id/gg_assistant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon_logo="@drawable/gg_assistant"
            app:title="@string/gg_assistant_title"
            app:description="@string/gg_assistant_desc"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/item_focused_background"
            />
    </LinearLayout>
         